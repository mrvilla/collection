<div class="c-search{{#if settings.searchContextClass}}--{{settings.searchContextClass}}{{else}}--default{{/if}}{{#if settings.searchClasses}} {{settings.searchClasses}}{{/if}}"
     data-css="c-search"
     data-js-module="search"{{#if settings.searchJsOptions}}
     data-js-options='{{stringify settings.searchJsOptions}}'{{/if}}>

	<form method="get" class="search__form">
		<div class="search__box">
			<label class="search__label">
				<span class="search__icon {{content.searchIcon}}"></span>
			</label>
			<input type="text" class="search__input" placeholder="{{content.placeholderText}}" data-js-item="search-input">
		</div>

		<input type="submit" value="{{content.submitText}}" class="search__submit" data-js-item="search-submit">
	</form>

	<div class="search__results" data-js-item="search-results">
		<div class="search__film-wrapper" data-js-item="search-results-film"></div>
		<div class="search__book-wrapper" data-js-item="search-results-book"></div>
		<div class="search__album-wrapper" data-js-item="search-results-album"></div>
	</div>

</div>


